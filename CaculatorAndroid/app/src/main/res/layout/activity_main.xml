<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:gravity="end"
        android:padding="16dp"
        android:textSize="24sp"
        android:minHeight="80dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4">

        <Button android:id="@+id/btnLeftParen" android:text="(" android:layout_margin="4dp" />
        <Button android:id="@+id/btnRightParen" android:text=")" android:layout_margin="4dp" />
        <Button android:id="@+id/btnDelete" android:text="C" android:layout_margin="4dp" />
        <Button android:id="@+id/btnBackspace" android:text="←" android:layout_margin="4dp" />

        <Button android:id="@+id/btn7" android:text="7" android:layout_margin="4dp" />
        <Button android:id="@+id/btn8" android:text="8" android:layout_margin="4dp" />
        <Button android:id="@+id/btn9" android:text="9" android:layout_margin="4dp" />
        <Button android:id="@+id/btnMultiply" android:text="*" android:layout_margin="4dp" />

        <Button android:id="@+id/btn4" android:text="4" android:layout_margin="4dp" />
        <Button android:id="@+id/btn5" android:text="5" android:layout_margin="4dp" />
        <Button android:id="@+id/btn6" android:text="6" android:layout_margin="4dp" />
        <Button android:id="@+id/btnMinus" android:text="-" android:layout_margin="4dp" />

        <Button android:id="@+id/btn1" android:text="1" android:layout_margin="4dp" />
        <Button android:id="@+id/btn2" android:text="2" android:layout_margin="4dp" />
        <Button android:id="@+id/btn3" android:text="3" android:layout_margin="4dp" />
        <Button android:id="@+id/btnPlus" android:text="+" android:layout_margin="4dp" />

        <Button android:id="@+id/btn0" android:text="0" android:layout_margin="4dp" />
        <Button android:id="@+id/btnDot" android:text="." android:layout_margin="4dp" />
        <Button android:id="@+id/btnEqual" android:text="=" android:layout_gravity="fill" android:layout_margin="4dp" />
        <Button android:id="@+id/btnDivide" android:text="/" android:layout_margin="4dp" />
    </GridLayout>

</LinearLayout>